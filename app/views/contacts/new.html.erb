<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h1 class="text-center">Neem contact op</h1>
    <p class="text-center">Voor al uw vragen en/of opmerkingen</p>
    <div class="well">
      <p class="text-right">Alle velden met een * zijn verplicht</p>
      <%= form_for @contact do |f| %>
        <div class="form-group">
          <%= f.label :'Naam*' %>
          <%= f.text_field :name, class: 'form-control', placeholder: 'Naam' %>
        </div>

        <div class="form-group">
          <%= f.label :'Uw e-mailadres*' %>
          <%= f.email_field :email, class: 'form-control', placeholder: 'jouwadres@voorbeeld.nl' %>
        </div>

        <div class="form-group">
          <%= f.label :'Uw bericht*' %>
          <%= f.text_area :comments, class: 'form-control textbox', placeholder: 'Uw bericht' %>
        </div>
        <%= f.submit 'Submit', class: 'btn btn-default' %>
      <% end %>
    </div>
  </div>
</div>