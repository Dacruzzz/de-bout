<% if @contact.errors.any? %>
  <script type="text/javascript">
    $(window).load(function(){
      $('#myModal').modal('show');
    });
  </script>
<% end %>
<button type="button" class="btn btn-primary btn-lg pull-right" data-toggle="modal" data-target="#myModal">Open Contactformulier</button>

<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Contactformulier</h4>
        </div>
        <div class="modal-body">
          <div class="well">
            <% if @contact.errors.any? %>
              <ul>
                <% @contact.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            <% end %>
            <p class="text-right">Alle velden met een * zijn verplicht</p>
            <%= form_for @contact do |f| %>
              <div class="form-group">
                <%= f.label :'Naam*' %>
                <%= f.text_field :name, class: 'form-control', placeholder: 'Naam' %>
              </div>
              <div class="form-group">
                <%= f.label :'Uw e-mailadres*' %>
                <%= f.email_field :email, class: 'form-control', placeholder: 'jouwadres@voorbeeld.nl' %>
              </div>
              <div class="form-group">
                <%= f.label :'Uw bericht*' %>
                <%= f.text_area :comments, class: 'form-control textbox', placeholder: 'Uw bericht' %>
              </div>
            </div>
            <%= f.submit 'Versturen', class: 'btn btn-success' do %>
              <%= "data-dismiss='modal'".html_safe %>
            <% end %>
            <button type="button" class="btn btn-danger pull-right" data-dismiss="modal" >Annuleren</button>
          <% end %>
        </div>
      </div>
    </div>
</div>